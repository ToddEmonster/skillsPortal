<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('reset') }}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <section class="sidebar_menu">
            <h1>SkillsPortal</h1>
            {% if is_granted('ROLE_STRUCT') %}
                <h2>Tableau de bord</h2>
            {% endif %}
            {% if app.user and not is_granted('ROLE_STRUCT') %}
                <h2>Mon profil</h2>
            {% endif %}
        </section>

        <section class="page">
            <header>
                {% if app.user %}
                    <form class="search-form">
                        <input class="search-bar" placeholder="Rechercher..." />
                        <input type="submit" value="Rechercher">
                    </form>
                    <span>
                        <i>{{ app.user.firstname ~ ' ' ~ app.user.lastname }}</i>
                        &nbsp;||&nbsp;
                        <a href="{{ path('app_logout') }}">DÃ©connexion</a>
                    </span>
                {% endif %}
            </header>

            <div class="page__content">
                {% block body %}{% endblock %}
            </div>
        </section>

    </body>
</html>
